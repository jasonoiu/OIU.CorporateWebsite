@using OIU.MvcPager
@model PagedList<OIU.CorporateWebsite.Model.News>

@section head
{
    <script src="~/Content/MVCPager/MvcPager.min.js"></script>
    <link href="~/Content/MVCPager/pagerstyles.min.css" rel="stylesheet" />
}
@{ Html.RenderAction("SiteLeft", "SiteConfig");}

<div class="ccright">
    <div class="ctit3">您现在的位置是：<a href="/" target="_blank">首页</a> >  新闻中心</div>
    <div id="news" style="padding: 10px 30px; line-height: 200%;">
        <ul class="xinwen">
            @foreach (var m in Model)
            {
                <li>
                    @Html.ActionLink(m.NewsTitle, "Details", "News", new { id = m.ID }, new { title = m.NewsTitle, target = "_blank" })
                    <span> @m.AddTime </span>
                </li>
            }
        </ul>

    </div>

    @Html.Pager(Model, new PagerOptions
                            {
                                PageIndexParameterName = "id",
                                CurrentPagerItemWrapperFormatString = "<span class=\"current\">{0}</span>",
                                AutoHide = false,
                                FirstPageRouteName = "default"
                            }, "pager", null,
                       new { id = "badoopager" })

</div>

